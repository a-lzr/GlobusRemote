@using Localize = GlobusRemote.Localize.Index

<div id="alertEdit" class="alert alert-danger hidden">
    <a id="alertTitle" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample"></a>
    <div id="alerCollapse" class="collapse">
        <div id="alertDetails" class="card card-body"></div>
    </div>
</div>

<div class="modal-footer">
    <p>
        <input id="btnSubmit" type="submit" value="@Localize.DialogEdit_Submit_Title" class="btn btn-primary" />
        <button type="button" class="btn btn-secondary" data-dismiss="modal">@Localize.DialogBase_Submit_Close</button>
    </p>
</div>