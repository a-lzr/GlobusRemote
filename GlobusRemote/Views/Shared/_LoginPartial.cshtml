@model LoginViewModel
@using Localize = GlobusRemote.Localize.Index

@{
    Layout = null;
}

@Html.AntiForgeryToken()
<h6>@Localize.DialogLogin_Text</h6>
<hr />
<div class="form-floating">
    @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "form-label" })
    @Html.EditorFor(model => model.Login, new
    {
        htmlAttributes = new
        {
            @class = "form-control"
        }
    })
    @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
</div>
<div class="form-floating">
    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label" })
    @Html.EditorFor(model => model.Password, new
    {
        htmlAttributes = new
        {
            @type="password",
            @class = "form-control"
        }
    })
    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
</div>