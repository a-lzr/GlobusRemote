<body>
    <div class="page-wrapper chiller-theme">
        @if (User.Identity.IsAuthenticated)
        {
            <partial name="_SideBarPartial" />
        }
        <div class="page-content">
            <header @*class="header" height="80"*@>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                    <div class="container">
                        <div class="navbar-header mr-3">
                            <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/globus-logo.png" style="height: 60px; max-width: 100%; max-height: 100%" /></a>
                        </div>

                        @*<a class="lHeader_logo" href="/"></a>*@
                        @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GlobusRemote</a>*@
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1 ulMenu">
                                @*<li class="nav-item mr-3">
                                        <a asp-area="" asp-controller="Home" asp-action="Index">@Localize.Header_Main</a>
                                    </li>
                                    <li class="nav-item mr-3">
                                        <a asp-area="" asp-controller="Privacy" asp-action="List">Privacy</a>
                                    </li>
                                    <li class="nav-item mr-3">
                                        <a asp-area="" asp-controller="Student" asp-action="Index">Student</a>
                                    </li>*@
                            </ul>
                            <partial name="_LangPartial" />
                        </div>
                    </div>
                </nav>
            </header>
            @if (User.Identity.IsAuthenticated)
            {
                <a id="show-sidebar" class="btn btn-sm btn-dark" href="#">
                    <i class="fas fa-bars"></i>
                </a>
            }
            <main class="page-control page-body" style="min-width: 200px;">
                @RenderBody()
            </main>
            <footer class="border-top bg-white page-footer">
                <div class="page-control" @*class="container"*@>
                    <small>
                        GlobusRemote &copy; 2021
                        <a target="_blank" rel="noopener noreferrer" href=@Localize.Footer_Company_Url>@Localize.Footer_Company_Title</a>
                        <i class="fa fa-heart" style="color:red"></i>
                    </small>
                </div>
            </footer>
        </div>
    </div>
