@model List<GlobusRemote.Areas.Mobile.Models.UsersMissionsListViewModel>
@using Localize = GlobusRemote.Localize.Index

@{
    ViewData["Title"] = @Localize.MobilePage_UsersMissions_Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="divTable">
    <div class="divTableBody">
        <div class="divTableHeadRow">
            <div>
                @Localize.Field_Base_Id
            </div>
            <div>
                @Localize.Field_Base_ParentLink
            </div>
            <div>
                @Localize.Field_Base_FlagCurrent
            </div>
            <div>
                @Localize.Field_Base_FlagNext
            </div>
            <div>
                @Localize.Field_Base_FlagExpire
            </div>
            <div>
                @Localize.Field_Base_DateCreated
            </div>
            <div>
                @Localize.Field_Base_DateChanged
            </div>
            <div>
                @Localize.Field_Base_Operations
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="divTableRow">
                <div>
                    @item.Fid
                </div>
                <div>
                    @item.FparentLink
                </div>
                <div>
                    @item.FflagCurrent
                </div>
                <div>
                    @item.FflagNext
                </div>
                <div>
                    @item.FflagExpire
                </div>
                <div>
                    @item.FdateCreated
                </div>
                <div>
                    @item.FdateChanged
                </div>
                <div>
                    @if (@item.CanEdit)
                    {
                        <form action="/Mobile/UsersTemplates/Remove?id=@item.Fid" method="post">
                            <input type="submit" title="Удалить текущую запись" value="Удалить" onclick="return confirm('Вы действительно хотите удалить выбранную запись?')">
                        </form>
                    }
                </div>
            </div>
        }
    </div>
</div>