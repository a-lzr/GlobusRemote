@model List<GlobusRemote.Areas.Mobile.Models.UsersMessagesListViewModel>
@using Localize = GlobusRemote.Localize.Index

@{
    ViewData["Title"] = @Localize.MobilePage_UsersMessages_Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="divTable">
    <div class="divTableBody">
        <div class="divTableHeadRow">
            <div>
                @Localize.Field_Base_Id
            </div>
            <div>
                @Localize.Field_Base_ParentLink
            </div>
            <div>
                @Localize.Field_Base_ScenarioLink
            </div>
            <div>
                @Localize.Field_Base_Type
            </div>
            <div>
                @Localize.Field_Base_CodeResponse
            </div>
            <div>
                @Localize.Field_Base_Date
            </div>
            <div>
                @Localize.Field_Base_Text
            </div>
            <div>
                @Localize.Field_Base_DateCreated
            </div>
            <div>
                @Localize.Field_Base_DateChanged
            </div>
            <div>
                @Localize.Field_Base_Operations
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="divTableRow">
                <div>
                    @item.Fid
                </div>
                <div>
                    @item.FparentLink
                </div>
                <div>
                    @item.FscenarioName
                </div>
                <div>
                    @item.FtypeName
                </div>
                <div>
                    @item.FcodeResponse
                </div>
                <div>
                    @item.Fdate
                </div>
                <div>
                    @item.Ftext
                </div>
                <div>
                    @item.FdateCreated
                </div>
                <div>
                    @item.FdateChanged
                </div>
                <div>
                    @if (@item.CanEdit)
                    {
                        <form action="/Mobile/UsersMessages/Remove?id=@item.Fid" method="post">
                            <input type="submit" title="Удалить текущую запись" value="Удалить" onclick="return confirm('Вы действительно хотите удалить выбранную запись?')">
                        </form>
                    }
                </div>
            </div>
        }
    </div>
</div>